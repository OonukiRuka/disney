<h3>詳細</h3>
<div class="food">
  <p><%= @food.about %></p>
  <% if user_signed_in? %>
  <% if current_user.already_liked?(@food) %>
    <%= link_to food_like_path(@food), method: :delete do %>
      <p>いいねを取り消す</p><%= @food.likes.count %>
    <% end %>
  <% else %>
    <%= link_to food_likes_path(@food), method: :post do %>
      <p>いいね</p><%= @food.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <p>いいねの数 = </p><%= @food.likes.count %>
<% end %>
<%= flash[:notice] %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@food, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "一覧に戻る", foods_path %>